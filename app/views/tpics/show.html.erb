<div class="contents row">
<div class="content_post">
   <% if user_signed_in? && current_user.id == @tpic.user_id %> 
    <div class="more">
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_tpic_path(@tpic.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', tpic_path(@tpic.id), method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>
    <p><%= @tpic.title %></p>
    <span class="name">
      <a href="/users/<%= @tpic.user.id %>">
       <span>投稿者</span><%= @tpic.user.name %>
      </a>
    </span>
  </div>
  <div class="container">
  <h1>トピック内容</h1>
   <%= @tpic.text%>
   </div>
   <div class="container2">
    <% if user_signed_in? && current_user.id == @tpic.user.id %>
    <h1><span>トピックを編集する</span></h1>
    <span>タイトル</span>
      <%= form_with(model: [@tpic], local: true) do |form| %>
      <%= form.text_field :title, placeholder: "Title" %>
      <span>本文</span>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% end %>

      <div class="container">
    <% if user_signed_in? %>
      <%= form_with(model: [@tpic, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>


    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.name, "/users/#{comment.user_id}" %>：</strong>
          <%= comment.text %> :
          <%= comment.created_at.to_s(:datetime_jp) %>
        </p>
      <% end %>
    </div>
  </div>
</div>
<div class="contents row">
  <div class="container">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

     <div class="field">
        <%= f.label :name, "ユーザーネーム" %> <em></em><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード"%>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="field">
      好きなゲームジャンル(いずれか1つ選択)
        <%= f.collection_select(:like_id, Like.all, :id, :name, {}, {class:"select-box", id:"like_games"}) %>
        </div>

      <div class="field">
        <%= f.label :profile, "プロフィール"%><br />
        <%= f.text_area :profile %>
      </div>
  

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>